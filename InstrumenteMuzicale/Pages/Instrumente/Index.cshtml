@page
@model InstrumenteMuzicale.Pages.Instrumente.IndexModel

@{
    ViewData["Title"] = "Instrumentele Noastre";
}

<h1>Instrumentele Noastre</h1>

<p>
    <a asp-page="Create" class="btn btn-success">Adaugă un nou instrument</a>
</p>

@if (Model.ListaInstrumente.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Nume</th>
                <th>Descriere</th>
                <th>Preț</th>
                <th>Categorie</th>
                <th>Imagine</th>
                <th>Acțiuni</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var instrument in Model.ListaInstrumente)
            {
                <tr>
                    <td>@instrument.Nume</td>
                    <td>@instrument.Descriere</td>
                    <td>@instrument.Pret.ToString("C")</td>
                    <td>@instrument.Categorie</td>
                    <td><img src="~/images/@(instrument.Imagine +".jpg")" alt="@instrument.Nume" width="100" /></td>
                    <td>
                        <a asp-page="Edit" asp-route-id="@instrument.ID" class="btn btn-warning btn-sm">Editează</a>
                        <a asp-page="Details" asp-route-id="@instrument.ID" class="btn btn-info btn-sm">Detalii</a>
                        <a asp-page="Delete" asp-route-id="@instrument.ID" class="btn btn-danger btn-sm">Șterge</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-muted">Momentan nu există instrumente înregistrate.</p>
}
