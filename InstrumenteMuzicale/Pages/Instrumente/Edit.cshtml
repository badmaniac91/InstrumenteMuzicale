@page
@model InstrumenteMuzicale.Pages.Instrumente.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Instrument</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Instrument.ID" />
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Instrument.Nume" class="control-label"></label>
                <input asp-for="Instrument.Nume" class="form-control" />
                <span asp-validation-for="Instrument.Nume" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Instrument.Descriere" class="control-label"></label>
                <input asp-for="Instrument.Descriere" class="form-control" />
                <span asp-validation-for="Instrument.Descriere" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Instrument.Pret" class="control-label"></label>
                <input asp-for="Instrument.Pret" class="form-control" />
                <span asp-validation-for="Instrument.Pret" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Instrument.Categorie" class="control-label"></label>
                <input asp-for="Instrument.Categorie" class="form-control" />
                <span asp-validation-for="Instrument.Categorie" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Instrument.Imagine" class="control-label"></label>
                <input asp-for="Instrument.Imagine" class="form-control" />
                <span asp-validation-for="Instrument.Imagine" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
