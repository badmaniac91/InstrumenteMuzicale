<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Instrumente Muzicale</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="wrapper">
        <header>
            <nav class="navbar navbar-expand-lg navbar-dark">
                <div class="container">
                    <a class="navbar-brand" asp-page="/Index">Instrumente Muzicale</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Index">Acasă</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/DespreNoi">Despre noi</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Instrumente/Index">Instrumentele Noastre</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Comenzi/Index">Comenzile tale</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        <div class="main-content container mt-4">
            @RenderBody()
        </div>

        <footer class="border-top text-center mt-4 py-3">
            <p>&copy; 2025 - Instrumente Muzicale - <a asp-page="/Privacy">Privacy</a></p>
        </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
